<Page x:Class="AdminPanel.EmployerRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="EmployerRequestsPage">

    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Back button -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        

        <!-- Back Button -->
        <Button Content="Back"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Padding="10,5"
                FontSize="12"
                FontWeight="SemiBold"
                Background="#CBA6F7"
                Foreground="#1E1E2E"
                BorderThickness="0"
                Cursor="Hand"
                Click="Back_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CBA6F7"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B493F4"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#9D7BEF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- ListView -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Employer Requests" 
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Foreground="#CDD6F4"
                       Margin="0,20,0,20"/>

            <!-- Requests List -->
            <ListView x:Name="RequestsListView"
                      Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#313244"
                      BorderBrush="#585B70"
                      BorderThickness="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="8" 
                                Background="#45475A" 
                                Margin="5" 
                                Padding="10">
                            <StackPanel>
                                <!-- Primary Details -->
                                <TextBlock Text="{Binding CompanyName}" 
                                           Foreground="#CDD6F4" 
                                           FontSize="16"/>
                                <TextBlock Text="{Binding ApplicantId, StringFormat='Applicant ID: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12"/>
                                <!-- Additional Details -->
                                <TextBlock Text="{Binding CompanyAddress, StringFormat='Address: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding CompanyEmail, StringFormat='Email: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding CompanyPhoneNumber, StringFormat='Phone: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Industry, StringFormat='Industry: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding CompanyWebsite, StringFormat='Website: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding EstablishedYear, StringFormat='Established: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding CompanyDescription, StringFormat='Description: {0}'}" 
                                           Foreground="#BAC2DE" 
                                           FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            Margin="0,10,0,0">
                                    <Button Content="Accept" 
                                            Background="#A6E3A1" 
                                            Foreground="#1E1E2E"
                                            Margin="0,0,10,0"
                                            Click="Accept_Click"
                                            Tag="{Binding ApplicantId}"/>
                                    <Button Content="Delete" 
                                            Background="#F38BA8" 
                                            Foreground="#1E1E2E"
                                            Click="Delete_Click"
                                            Tag="{Binding ApplicantId}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
